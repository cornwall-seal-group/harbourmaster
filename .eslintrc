{
    "extends": ["airbnb-base", "prettier"],
    "plugins": ["prettier"],
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "allowImportExportEverywhere": true,
        "codeFrame": false,
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": ["error"]
    }
}
